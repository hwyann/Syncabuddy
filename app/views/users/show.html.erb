<h1 class="dashboard-title">Match hosted</h1>
<div class="container-fluid">
  <div class="scrolling-wrapper row flex-row flex-nowrap mt-4 pb-4">
    <div class="col-12 col-md-6 col-lg-3 ml-4">
      <% current_user.matches.sort_by{|obj| obj.date}.each do |match| %>
      <div class="item-done">
        <h2><%= match.sport %></h2>
        <h2 style="color: #EDECEC;"><%= match.date.strftime("%b %e,%l:%M %p")  %></h2>
        <p>Location: <%= match.location %></p>
        <p>Hosted by: <%= match.user.nickname  %></p>
        <h3>Attendances:</h3>
        <% match.attendances.each do |attendance| %>
          <p><%= attendance.user.nickname %></p>
          <%= link_to 'accept', attendance_path(attendance), method: :patch %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>


