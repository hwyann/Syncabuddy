<div class="form-box">
  <h2>Post a new match</h2>
  <%= simple_form_for(@match) do |f| %>
    <%= f.input :sport, collection: Match::SPORTS %>
    <%= f.input :date %>
    <%= f.input :location %>
    <%= f.input :min_attendent %>
    <%= f.input :max_attendent %>
    <%= f.input :description %>
    <%= f.button :submit, class: "btn btn-light" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  <% end %>
</div>